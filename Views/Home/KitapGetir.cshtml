@model Kutuphane_Projesi.Models.Kutuphane
@{
    ViewData["Title"] = "KitapGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Guncelle", "Home", FormMethod.Post))
{
    
    <b>Kitap ID</b>
    @Html.TextBoxFor(x => x.KitapID, new { @class = "form-control" })
    <br />
    <b>Kitap Adı</b>
    @Html.TextBoxFor(x => x.KitapAd, new { @class = "form-control" })
    <br />
    <b>Yazar</b>
    <br />
    @Html.TextBoxFor(x => x.Yazar, new { @class = "form-control" })
    <br />
    <b>Tür</b>
    @Html.TextBoxFor(x => x.Tur, new { @class = "form-control" })
    <br />
    <b>Baskı Yılı</b>
    @Html.TextBoxFor(x => x.BaskiYili, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kitabı Güncelle</button>
}

